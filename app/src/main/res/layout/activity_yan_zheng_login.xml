<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.login.YanZhengLogin_Activity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/yanlogin_fanhui_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/loginfanhui"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="33dp"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/heisan"
            android:text="验证码登录"
            android:textStyle="bold"
            android:layout_marginTop="70dp"></TextView>

        <EditText
            android:id="@+id/yanlogin_shoujihao_edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:layout_marginTop="30dp"
            android:hint="请输入手机号"></EditText>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="12dp"
            android:background="@color/chaoqianhui"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18dp">
            <EditText
                android:id="@+id/yanlogin_yanzhengma_edittext"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="50dp"
                android:background="@null"
                android:hint="请输入验证码"></EditText>

            <TextView
                android:id="@+id/yanlogin_huoqu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取"
                android:textColor="@color/zhutihuang"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_gravity="center_vertical"></TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="12dp"
            android:background="@color/chaoqianhui"></View>

        <Button
            android:id="@+id/yanlogin_denglu_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/zhutichengyuanjiaowubiankuang"
            android:layout_marginTop="35dp"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="16sp"></Button>

        <TextView
            android:id="@+id/yanlogin_zhanghaodenglu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帐号密码登录"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:padding="5dp"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:text="还没有账号？"
                android:textSize="12sp"></TextView>
            <TextView
                android:id="@+id/yanlogin_zhuce_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去注册"
                android:textSize="12sp"
                android:textColor="@color/lanse"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:padding="5dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            android:layout_marginBottom="35dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录即表示您同意"
                android:textSize="10sp"></TextView>
            <TextView
                android:id="@+id/yanlogin_xieyi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户协议》"
                android:textColor="@color/blue_37A0FC"
                android:textSize="10sp"
                android:padding="5dp"></TextView>
            <TextView
                android:id="@+id/yanlogin_zhengce_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《隐私政策》"
                android:textColor="@color/blue_37A0FC"
                android:textSize="10sp"
                android:padding="5dp"></TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>