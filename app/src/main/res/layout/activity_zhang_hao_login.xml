<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.login.ZhangHaoLogin_Activity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/zhlogin_fanhui_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/loginfanhui"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="33dp"
            android:visibility="gone"></ImageView>

        <TextView
            android:id="@+id/zhlogin_guangguang_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="随便逛逛"
            android:layout_alignParentRight="true"
            android:layout_marginTop="34dp"
            android:layout_marginRight="20dp"
            android:padding="20dp"></TextView>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/heisan"
            android:text="帐号密码登录"
            android:textStyle="bold"
            android:layout_marginTop="70dp"></TextView>

        <EditText
            android:id="@+id/zhlogin_shoujihao_edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:layout_marginTop="30dp"
            android:hint="请输入手机号"></EditText>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="12dp"
            android:background="@color/chaoqianhui"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18dp">

            <EditText
                android:id="@+id/zhlogin_mima_edittext"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="9"
                android:background="@null"
                android:hint="请输入密码"></EditText>

            <ImageView
                android:id="@+id/zhlogin_kejian_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/yincangmima"
                android:layout_gravity="center_vertical"></ImageView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="12dp"
            android:background="@color/chaoqianhui"></View>

        <Button
            android:id="@+id/zhlogin_denglu_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/zhutichengyuanjiaowubiankuang"
            android:layout_marginTop="35dp"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="16sp"></Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/zhlogin_yanzhengma_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="验证码登录"
                android:textSize="12sp"
                android:padding="5dp"
                android:gravity="center_horizontal"></TextView>

            <TextView
                android:id="@+id/zhlogin_wangji_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:textSize="12sp"
                android:padding="5dp"
                android:gravity="center_horizontal"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:text="还没有账号？"
                android:textSize="12sp"></TextView>
            <TextView
                android:id="@+id/zhlogin_zhuce_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去注册"
                android:textSize="12sp"
                android:textColor="@color/lanse"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:padding="5dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            android:layout_marginBottom="35dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录即表示您同意"
                android:textSize="10sp"></TextView>
            <TextView
                android:id="@+id/zhlogin_xieyi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户协议》"
                android:textColor="@color/blue_37A0FC"
                android:textSize="10sp"
                android:padding="5dp"></TextView>
            <TextView
                android:id="@+id/zhlogin_zhengce_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《隐私政策》"
                android:textColor="@color/blue_37A0FC"
                android:textSize="10sp"
                android:padding="5dp"></TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>